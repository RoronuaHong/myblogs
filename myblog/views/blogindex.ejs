		//JavaScript首页控制器
		app.controller("jsindexCtrl", function($scope, $http) {
			var shownum = 1;
			var pagesizes = 10;

			function GetAjax() {
				$http({
					url: "/blogindex/#/javascript",
					method: "POST",
					dataType: "json",
					data: {
						jsindex: 1,
						pagesize: pagesizes,
						pagenum: shownum
					}
				})
				.then(function(data) {
					console.log(data.data);
					var n = data.data.result;

					$scope.pagelists = [];

					$scope.prelist = data.data.titleArr;

					for(var i = 0; i < n; i++) {
						$scope.pagelists.push({
							"lens": (i + 1)
						});
					}

					//添加类名
					for(var i in $scope.pagelists) {
						$scope.pagelists[i].pagesels = "";
					}
					$scope.pagelists[shownum - 1].pagesels = "pagesels";

					//上一页
					$scope.prebtn = function() {
						if(shownum > 1) {
							shownum--;
						}

						if(shownum > pagesizes) {
							$scope.start = Math.floor(shownum / pagesizes) * pagesizes;
						}

						if(shownum <= pagesizes) {
							$scope.start = 0;
						}
						new GetAjax();
					}

					//下一页
					$scope.nextbtn = function() {
						if(shownum < n) {
							shownum++;
						}
						if(shownum > pagesizes) {
							$scope.start = Math.floor(shownum / pagesizes) * pagesizes;
						}
						new GetAjax();
					}

					//显示当前页
					$scope.ThisPage = function(len) {
						shownum = len;
						new GetAjax();
					}
				})
				.catch(function(data) {
					console.log(data);
				});
			}

			new GetAjax();
		});

