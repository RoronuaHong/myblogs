		//返回顶部功能
		app.directive("returnTop", function() {
			return {
				restrict: "A",
				link: function(scope, jqlite, attrs) {

					//设置初始位置
					jqlite.css({
						top: ($(window).height() - 150) + "px"
					});

					var posX = 0;
			    	timer = 0;

					window.onscroll = function() {
						var scrolltop = document.documentElement.scrollTop || document.body.scrollTop;
						if(scrolltop >= 300) {
							jqlite.css({
								opacity: 1,
								zIndex: 200
							});
						} else {
							jqlite.css({
								opacity: 0,
								zIndex: -1
							});
						}
					}
					jqlite.on("click", function() {
						$(".em2").show();
						function show() {
							$(".em2").css({
								background: "url(/images/rocket.png) " + (posX - 33) + "px -15px no-repeat",
							});

			    			document.body.scrollTop -= 30;
			    			jqlite.css({
			    				top: "-500px",
			    				transition: "all linear 1s"
			    			});
			    			if(posX > -750) {
			    				posX -= 150;
			    			} else {
			    				posX = -150;
			    			}
			    			if(document.body.scrollTop == 0) {
			    				var timers = setTimeout(function() {
				    				clearInterval(timer);
				    				$(".em2").hide();
				    				$(".em2").css({
										background: "url(/images/rocket.png) -33px -15px no-repeat"
									});

				    				posX = 0;
			    					jqlite.css({
										top: ($(window).height() - 150) + "px",
										transition: "opacity linear 1s"
									});
			    				}, 500);
			    			}
			    		}
			    		timer = setInterval(show,16);
					});
				}
			}
