<!DOCTYPE html>
<html>
    <head>
        <title>Slim。</title>
        <link rel='stylesheet' href='/stylesheets/reset.css'/>
        <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/resumeindex.css">
        <link rel="shortcut icon" href="/images/favicon.ico">
    </head>
    <body ng-app="myApp">
        <div class="slimbox" id="slimboxs">
            <div class="slimimg">
                <img src="/images/slims.png" alt="">
            </div>
            <a href="#/blogindexs.html">
                <div class="mybloginter">
                    <h1>Slim。</h1>
                    <span>个人博客</span>
                </div>
            </a>
        </div>
        <ul class="skills" id="skillss" ng-controller="myskillCtrl">
            <li ng-repeat="i in list" ng-class="colors[i.id]" ng-mouseover="hover=true" ng-mouseleave="hover=false">
                <div ng-bind="i.name"></div>
                <div class="skillcon" ng-if="hover">
                    <p ng-bind-html="i.cons"></p>
                </div>
            </li>
        </ul>
        <div class="slimunderwritebox">
            <canvas id="myCanvas"></canvas>
        </div>
        <!-- <div class="mainbox" id="mainboxs">

        </div> -->
    </body>
    <script src="/javascripts/angular.min.js"></script>
    <script src="/javascripts/angular-route.min.js"></script>
    <script src="/javascripts/resumeindex.js"></script>
    <script>
        var app = angular.module("myApp", ["ngRoute"]);

        //配置路由
        app.config(function($routeProvider) {

            //配置博客主页
            $routeProvider
            .when("/blogindexs", {
                templateUrl: "/templates/blogindexs.html",
                controller: "blogindexsCtrl"
            })
        });

        app.controller("blogindexsCtrl", function() {

        });

        app.controller("myskillCtrl", function($scope, $http, $sce) {
            $http({
                url: "./",
                method: "POST",
                type: "json"
            })
            .success(function(data) {

                //设置多种颜色
                var colors = ["myjavascript", "mynodejs", "myothers"];

                $scope.colors = [];

                for(var i = 0; i < data.arr.length; i++) {
                    $scope.colors[data.arr[i].id] = colors[Math.floor(Math.random() * 3)];
                    data.arr[i].cons = $sce.trustAsHtml(data.arr[i].cons.replace(/;/g, "<br>"));
                }

                $scope.list = data.arr;

                //实例化
                var resumefunction = new Resumes(data.arr);

                //实现技能表效果
                resumefunction.skillfunc();

                //实现签名功能
                resumefunction.slimunderwrite();

                //实现技能表内容
                resumefunction.skillShow();

            })
            .error(function(data) {
                console.log(data);
            });
        });
    </script>
</html>
